<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/tvSlNoReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="#"
                android:textColor="@color/whites"/>

            <TextView
                android:id="@+id/tvItemcodeReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Item Code"
                android:textColor="@color/whites"/>
            <TextView
                android:id="@+id/tvPrdctNameReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Product Name"
                android:textColor="@color/whites"
                android:gravity="left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMrpReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="MRP"
                android:gravity="right"
                android:textColor="@color/whites"/>

            <TextView
                android:id="@+id/tvQtyReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="SO QTY"
                android:gravity="center"
                android:textColor="@color/whites"/>
            <TextView
                android:id="@+id/tvLineNetReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Line Net"
                android:textColor="@color/whites"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tvBilledQtyReportDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Billed QTY"
                android:textColor="@color/whites"
                android:gravity="right"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>