<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogwindow_bg"
    android:orientation="vertical"
    android:paddingLeft="20px"
    android:paddingRight="20px">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31.33px"
        android:layout_marginTop="39.33px"
        android:background="@drawable/ic_baseline_close_24px"
        android:id="@+id/imgBtnCloseItemLookup"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBtnCloseItemLookup"
        android:id="@+id/rlSearch">

        <!--<EditText-->
            <!--android:id="@+id/etSearchItemLookup"-->
            <!--android:layout_width="match_parent"-->
